# Railway Deployment Configuration
# Copy this file to .env and fill in your actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,*.railway.app

# Database
# Railway provides DATABASE_URL automatically for PostgreSQL
DATABASE_URL=postgresql://user:password@localhost/dbname

# Site Configuration
SITE_URL=https://yourdomain.com

# Email Configuration (optional, for certificate emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Stripe (if using payments in future)
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret
STRIPE_PRODUCT_PRICE_ID=price_your_id

# Codespace specific (leave empty for Railway)
CODESPACE_NAME=
GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN=
